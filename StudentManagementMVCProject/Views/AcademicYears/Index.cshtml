@model IEnumerable<StudentManagementMVCProject.Models.AcademicYear>
@{
    ViewData["Title"] = "إدارة السنوات الأكاديمية";
}

<div class="academic-years-dashboard" dir="rtl">
    <!-- Header Section -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="bi bi-calendar-range"></i> إدارة السنوات الأكاديمية
            </h1>
            <div class="header-actions">
                <a asp-action="Create" class="btn btn-success btn-add">
                    <i class="bi bi-plus-lg"></i> إضافة سنة أكاديمية جديدة
                </a>
            </div>
        </div>
        <div class="header-wave">
            <svg viewBox="0 0 1200 120" preserveAspectRatio="none">
                <path d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z" opacity=".25" fill="currentColor"></path>
                <path d="M0,0V15.81C13,36.92,27.64,56.86,47.69,72.05,99.41,111.27,165,111,224.58,91.58c31.15-10.15,60.09-26.07,89.67-39.8,40.92-19,84.73-46,130.83-49.67,36.26-2.85,70.9,9.42,98.6,31.56,31.77,25.39,62.32,62,103.63,73,40.44,10.79,81.35-6.69,119.13-24.28s75.16-39,116.92-43.05c59.73-5.85,113.28,22.88,168.9,38.84,30.2,8.66,59,6.17,87.09-7.5,22.43-10.89,48-26.93,60.65-49.24V0Z" opacity=".5" fill="currentColor"></path>
                <path d="M0,0V5.63C149.93,59,314.09,71.32,475.83,42.57c43-7.64,84.23-20.12,127.61-26.46,59-8.63,112.48,12.24,165.56,35.4C827.93,77.22,886,95.24,951.2,90c86.53-7,172.46-45.71,248.8-84.81V0Z" fill="currentColor"></path>
            </svg>
        </div>
    </div>

    <!-- Years Cards -->
    <div class="years-container">
        @if (!Model.Any())
        {
            <div class="no-years">
                <i class="bi bi-calendar-x"></i>
                <h4>لا توجد سنوات أكاديمية مسجلة</h4>
                <p>يمكنك إضافة سنوات أكاديمية جديدة باستخدام زر "إضافة سنة أكاديمية جديدة"</p>
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                @foreach (var item in Model)
                {
                    <div class="col">
                        <div class="card year-card h-100">
                            <div class="card-header bg-primary text-white">
                                <h5 class="year-title">@item.Name</h5>
                            </div>
                            <div class="card-body">
                                <div class="year-details">
                                    <div class="detail-item">
                                        <i class="bi bi-calendar-check"></i>
                                        <span class="detail-label">الحالة:</span>
                                        <span class="detail-value">نشط</span>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="action-buttons">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm action-btn" title="تعديل">
                                        <i class="bi bi-pencil"></i>
                                        <span class="d-none d-sm-inline">تعديل</span>
                                    </a>
                                    
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm action-btn" title="حذف">
                                        <i class="bi bi-trash"></i>
                                        <span class="d-none d-sm-inline">حذف</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --success-color: #28a745;
        --info-color: #17a2b8;
        --warning-color: #ffc107;
        --danger-color: #dc3545;
        --light-color: #f8f9fa;
        --dark-color: #212529;
    }

    .academic-years-dashboard {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1rem 2rem;
    }

    .dashboard-header {
        position: relative;
        margin-bottom: 2rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
    }

    .page-title {
        color: var(--dark-color);
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
    }

        .page-title i {
            margin-left: 0.75rem;
            color: var(--primary-color);
        }

    .btn-add {
        border-radius: 50px;
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        display: flex;
        align-items: center;
    }

        .btn-add i {
            margin-left: 0.5rem;
        }

    .header-wave {
        color: rgba(67, 97, 238, 0.1);
    }

        .header-wave svg {
            display: block;
            width: 100%;
            height: 5rem;
        }

    .years-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        padding: 1.5rem;
    }

    .no-years {
        text-align: center;
        padding: 3rem;
        color: #6c757d;
    }

        .no-years i {
            font-size: 3rem;
            color: #adb5bd;
            margin-bottom: 1rem;
        }

        .no-years h4 {
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

    /* Year Card Styles */
    .year-card {
        transition: all 0.3s ease;
        height: 100%;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    }

        .year-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 1rem;
        border-bottom: none;
    }

    .year-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .card-body {
        padding: 1rem;
    }

    .year-details {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .detail-item i {
            color: var(--primary-color);
            font-size: 1rem;
        }

    .detail-label {
        font-size: 0.8rem;
        color: #6c757d;
    }

    .detail-value {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--dark-color);
        margin-right: auto;
    }

    .card-footer {
        background: transparent;
        padding: 0.8rem;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .action-buttons {
        display: flex;
        gap: 0.3rem;
        flex-wrap: wrap;
    }

    .action-btn {
        padding: 0.3rem 0.5rem;
        font-size: 0.75rem;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex: 1;
        min-width: 60px;
        transition: all 0.2s ease;
    }

        .action-btn:hover {
            transform: translateY(-2px);
        }

        .action-btn i {
            font-size: 0.9rem;
            margin-left: 0.2rem;
        }

    /* Responsive Styles */
    @@media (max-width: 1200px) {
        .academic-years-dashboard {
            padding: 0 1rem 1.5rem;
        }

        .header-content {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }
    }

    @@media (max-width: 768px) {
        .action-buttons {
            gap: 0.2rem;
        }

        .action-btn {
            min-width: calc(50% - 0.2rem);
            padding: 0.25rem 0.4rem;
        }

            .action-btn span {
                display: none;
            }

            .action-btn i {
                margin: 0;
                font-size: 0.8rem;
            }
    }

    @@media (max-width: 576px) {
        .action-btn {
            min-width: 100%;
        }
    }
</style>