@model DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-octagon me-2"></i>Delete Department</h4>
                </div>
                <div class="card-body">

                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>Are you sure you want to delete this department?</h5>
                        <p class="mb-0">This action will permanently remove the department and may affect related courses and data.</p>
                    </div>

                    <h5 class="mb-4"><i class="bi bi-building me-2"></i>Department Information</h5>

                    @if (Model == null)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>No department found.
                        </div>
                    }
                    else
                    {
                        <dl class="row mb-0">
                            <!-- Code -->
                            <dt class="col-sm-3 fw-bold">
                                <i class="bi bi-code me-2"></i>@Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Code)</dd>

                            <!-- Name -->
                            <dt class="col-sm-3 fw-bold">
                                <i class="bi bi-building me-2"></i>@Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                            <!-- Department Head -->
                            <dt class="col-sm-3 fw-bold">
                                <i class="bi bi-person-badge me-2"></i>@Html.DisplayNameFor(model => model.DepartmentHeadName)
                            </dt>
                            <dd class="col-sm-9">
                                @(string.IsNullOrEmpty(Model.DepartmentHeadName) ? "Not assigned" : Model.DepartmentHeadName)
                            </dd>

                            <!-- Is Active -->
                            <dt class="col-sm-3 fw-bold">
                                <i class="bi bi-toggle-on me-2"></i>@Html.DisplayNameFor(model => model.isActive)
                            </dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-@(Model.isActive ? "success" : "danger")">
                                    @(Model.isActive ? "Active" : "Inactive")
                                </span>
                            </dd>
                        </dl>
                    }
                </div>
                @if (Model != null)
                {
                    <div class="card-footer bg-light">
                        <form asp-action="Delete" class="d-flex justify-content-between">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash3-fill me-2"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>