@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<div class="dashboard-container" dir="rtl">
    <!-- Hero Section -->
    <div class="hero-section text-center mb-5">
        <h1 class="display-4 fw-bold text-gradient mb-3">نظام إدارة الطلاب</h1>
        <p class="lead text-muted">منصة متكاملة لإدارة العملية التعليمية</p>
