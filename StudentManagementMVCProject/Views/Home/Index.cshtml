            </svg>
        </div>
    </div>

    <div class="stats-grid">
        <div class="stat-card student-card">
            <div class="card-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="card-content">
                <h3>الطلاب</h3>
                <span class="count">@ViewData["StudentCount"]</span>
                <a href="/Students" class="card-link">عرض الكل <i class="bi bi-arrow-left"></i></a>
            </div>
        </div>

        <div class="stat-card teacher-card">
            <div class="card-icon">
                <i class="bi bi-person-workspace"></i>
            </div>
            <div class="card-content">
                <h3>المعلمين</h3>
                <span class="count">@ViewData["TeacherCount"]</span>
                <a href="/Teachers" class="card-link">عرض الكل <i class="bi bi-arrow-left"></i></a>
            </div>
        </div>

        <div class="stat-card course-card">
            <div class="card-icon">
                <i class="bi bi-journal-bookmark-fill"></i>
            </div>
            <div class="card-content">
                <h3>المقررات</h3>
                <span class="count">@ViewData["CourseCount"]</span>
                <a href="/Courses" class="card-link">عرض الكل <i class="bi bi-arrow-left"></i></a>
            </div>
        </div>

        <div class="stat-card department-card">
            <div class="card-icon">
                <i class="bi bi-building-fill"></i>
            </div>
            <div class="card-content">
                <h3>الأقسام</h3>
                <span class="count">@ViewData["DepartmentCount"]</span>
                <a href="/Departments" class="card-link">عرض الكل <i class="bi bi-arrow-left"></i></a>
            </div>
        </div>
    </div>

    <!-- Semester Info -->
    <div class="semester-card">
        <div class="semester-header">
            <i class="bi bi-calendar2-range"></i>
            <h3>الفصل الدراسي الحالي</h3>
        </div>
        <div class="semester-body">
            <h2>@ViewData["CurrentSemesterName"]</h2>
            <div class="semester-dates">
                <div class="date-item">
                    <span>تاريخ البداية</span>
                    <strong>@ViewData["SemesterStartDate"]</strong>
                </div>
                <div class="date-item">
                    <span>تاريخ النهاية</span>
                    <strong>@ViewData["SemesterEndDate"]</strong>
                </div>
            </div>
            <div class="progress-container">
                <div class="progress-bar" id="semesterProgress"></div>
                <span class="progress-text" id="progressPercentage"></span>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h3 class="section-title"><i class="bi bi-lightning-charge-fill"></i> إجراءات سريعة</h3>
        <div class="actions-grid">
            <a href="/Students/Create" class="action-card">
                <i class="bi bi-person-plus"></i>
                <span>إضافة طالب جديد</span>
            </a>
            <a href="/Teachers/Create" class="action-card">
                <i class="bi bi-person-workspace"></i>
                <span>إضافة معلم جديد</span>
            </a>
            <a href="/Courses/Create" class="action-card">
                <i class="bi bi-journal-plus"></i>
                <span>إضافة مقرر جديد</span>
            </a>
            <a href="/Attendances" class="action-card">
                <i class="bi bi-clipboard2-check"></i>
                <span>تسجيل الحضور</span>
            </a>
        </div>
    </div>
</div>

<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3f37c9;
        --success-color: #4cc9f0;
        --info-color: #4895ef;
        --warning-color: #f8961e;
        --danger-color: #f72585;
        --light-color: #f8f9fa;
        --dark-color: #212529;
    }

    .dashboard-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
    }

    .hero-section {
        position: relative;
        padding: 3rem 0;
    }

    .text-gradient {
        background: linear-gradient(45deg, var(--primary-color), var(--success-color));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .wave-divider {
        color: rgba(67, 97, 238, 0.1);
        margin-top: 2rem;
    }

        .wave-divider svg {
            display: block;
            width: 100%;
            height: 5rem;
        }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-bottom: 3rem;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
        }

    .student-card::before {
        background: var(--primary-color);
    }

    .teacher-card::before {
        background: var(--info-color);
    }

    .course-card::before {
        background: var(--warning-color);
    }

    .department-card::before {
        background: var(--danger-color);
    }

    .card-icon {
        font-size: 2.5rem;
        margin-left: 1.5rem;
        color: var(--dark-color);
        opacity: 0.2;
    }

    .card-content {
        flex: 1;
    }

        .card-content h3 {
            font-size: 1.1rem;
            color: var(--dark-color);
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

    .count {
        font-size: 2rem;
        font-weight: 700;
        display: block;
        margin-bottom: 0.5rem;
    }

    .student-card .count {
        color: var(--primary-color);
    }

    .teacher-card .count {
        color: var(--info-color);
    }

    .course-card .count {
        color: var(--warning-color);
    }

    .department-card .count {
        color: var(--danger-color);
    }

    .card-link {
        font-size: 0.9rem;
        color: #6c757d;
        text-decoration: none;
        display: flex;
        align-items: center;
        transition: color 0.2s;
    }

        .card-link:hover {
            color: var(--primary-color);
        }

        .card-link i {
            margin-right: 0.5rem;
        }

    .semester-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
        margin-bottom: 3rem;
        overflow: hidden;
    }

    .semester-header {
        background: var(--dark-color);
        color: white;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
    }

        .semester-header i {
            font-size: 1.5rem;
            margin-left: 0.75rem;
        }

        .semester-header h3 {
            margin: 0;
            font-size: 1.2rem;
        }

    .semester-body {
        padding: 2rem 1.5rem;
    }

        .semester-body h2 {
            color: var(--dark-color);
            margin-bottom: 1.5rem;
            font-weight: 700;
        }

    .semester-dates {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .date-item {
        flex: 1;
    }

        .date-item span {
            display: block;
            color: #6c757d;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .date-item strong {
            font-size: 1.1rem;
            color: var(--dark-color);
        }

    .progress-container {
        background: #f8f9fa;
        border-radius: 50px;
        height: 10px;
        margin-top: 2rem;
        position: relative;
    }

    .progress-bar {
        background: linear-gradient(90deg, var(--primary-color), var(--success-color));
        border-radius: 50px;
        height: 100%;
        width: 0;
        transition: width 1s ease;
    }

    .progress-text {
        position: absolute;
        top: -25px;
        right: 0;
        font-size: 0.85rem;
        color: var(--dark-color);
        font-weight: 600;
    }

    .section-title {
        color: var(--dark-color);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        font-size: 1.3rem;
    }

        .section-title i {
            margin-left: 0.75rem;
            color: var(--warning-color);
        }

    .quick-actions {
        margin-bottom: 3rem;
    }

    .actions-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .action-card {
        background: white;
        border-radius: 8px;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        color: var(--dark-color);
        text-decoration: none;
    }

        .action-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            color: var(--primary-color);
        }

        .action-card i {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .action-card span {
            font-weight: 500;
        }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr 1fr;
        }

        .semester-dates {
            flex-direction: column;
            gap: 1rem;
        }

        .actions-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    @@media (max-width: 576px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .actions-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            function calculateSemesterProgress() {
                const startDateStr = '@ViewData["SemesterStartDate"]';
                const endDateStr = '@ViewData["SemesterEndDate"]';

                if (!startDateStr || !endDateStr || startDateStr === 'null' || endDateStr === 'null') {
                    document.getElementById('semesterProgress').style.width = '0%';
                    document.getElementById('progressPercentage').textContent = 'غير متاح';
                    return;
                }

                const startDateParts = startDateStr.split('-');
                const endDateParts = endDateStr.split('-');

                const startDate = new Date(
                    parseInt(startDateParts[0]),
                    parseInt(startDateParts[1]) - 1,
                    parseInt(startDateParts[2])
                );

                const endDate = new Date(
                    parseInt(endDateParts[0]),
                    parseInt(endDateParts[1]) - 1,
                    parseInt(endDateParts[2])
                );

                const today = new Date();

                const totalDuration = endDate - startDate;
                const elapsedDuration = today - startDate;

                let percentage = (elapsedDuration / totalDuration) * 100;

                percentage = Math.max(0, Math.min(100, percentage));

                document.getElementById('semesterProgress').style.width = percentage + '%';
                document.getElementById('progressPercentage').textContent =
                    Math.round(percentage) + '% من الفصل انقضى';
            }

            calculateSemesterProgress();
        });
    </script>
}