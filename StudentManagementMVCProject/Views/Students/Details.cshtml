@model StudentDetailsViewModel
    @{ViewData["Title"] = $"{Model.FullName} Profile";}

<h3 class="text-center">Student Info Card</h3>
<div class="card shadow p-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(string.IsNullOrEmpty(Model.ProfilePictureURL) ? "/images/profiles/default.jpg" : Model.ProfilePictureURL ) " class="img-fluid rounded-circle" style="max-height: 200px;" />
            <h4 class="mt-3">@Model.FullName</h4>
            <p class="text-muted">Student Number: @(Model.StudentNumber ?? "NA")</p>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> تعديل
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> العودة للقائمة
                </a>
                <a asp-action="Courses" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-book"></i> عرض المقررات
                </a>
            </div>
        </div>

        <div class="col-md-8">
            <table class="table table-bordered">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <td>@Html.DisplayFor(model => model.PhoneNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ParentNumber)</th>
                    <td>@(Model.ParentNumber ?? "NA")</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NationalId)</th>
                    <td>@Html.DisplayFor(model => model.NationalId)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Department)</th>
                    <td>@Html.DisplayFor(model => model.Department)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <td>@Html.DisplayFor(model => model.Status)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.EnrollmentDate)</th>
                    <td>@Html.DisplayFor(model => model.EnrollmentDate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Level)</th>
                    <td>@Html.DisplayFor(model => model.Level)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <td>@Html.DisplayFor(model => model.DateOfBirth)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <td>@(Model.Address ?? "NA")</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.isActive)</th>
                    <td>@(Model.isActive ? "Active" : "Inactive")</td>
                </tr>
            </table>
        </div>
    </div>
</div>
